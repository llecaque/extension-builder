<project name="build tao" default="help">
    	<target name="help">
		<echo msg ="Available Command : " />
		<exec executable="vendor/bin/phing" passthru="true">
			<arg value="-l" />
		</exec>
	</target>
	
	
	<target name="prepare">
		<exec command="pwd" passthru="true" />
		<exec command="ls src/" passthru="true" />

	</target>
	
	<target name="test" description="let s test that">
		<gitclone repository="git@github.com:oat-sa/deploy-test-package.git" targetPath="src" />
		<composer command="update" composer="${composer.bin}" >
			<arg value="--no-interaction" />
			<arg value="--no-scripts" />
			<arg value="--no-progress" />
			<arg value="--working-dir" />
			<arg path="src" />

		</composer>
		<phingcall target="prepare" />
		<echo msg="test" />
	</target>

</project>